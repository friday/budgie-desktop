<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema path="/org/ubuntubudgie/plugins/budgie-quicknote/"
            id="org.ubuntubudgie.plugins.budgie-quicknote">
        <key type="i" name="width">
            <summary>Quicknote window width</summary>
            <description>QuickNote popup window width</description>
            <default>350</default>
	    <range min="250" max="750"/>
        </key>
        <key type="i" name="height">
            <summary>Quicknote window height</summary>
            <description>QuickNote popup window height</description>
            <default>240</default>
	    <range min="150" max="450"/>
        </key>
        <key type="s" name="custompath">
            <summary>Data file</summary>
            <description>The customized path where the QuickNote datafile is stored</description>
            <default>""</default>
        </key>
    </schema>
</schemalist>


